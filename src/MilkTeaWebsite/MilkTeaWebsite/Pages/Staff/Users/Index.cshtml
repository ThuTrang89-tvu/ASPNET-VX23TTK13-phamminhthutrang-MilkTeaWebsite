@page
@model MilkTeaWebsite.Pages.Staff.Users.IndexModel
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-0"><i class="fas fa-users-cog"></i> Quản lý người dùng</h2>
        <p class="text-muted mb-0">Theo dõi, tạo mới và phân quyền tài khoản trong hệ thống</p>
    </div>
    <a asp-page="/Staff/Users/Create" class="btn btn-primary">
        <i class="fas fa-user-plus"></i> Thêm tài khoản
    </a>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-triangle-exclamation"></i> @Model.ErrorMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model.Users != null && Model.Users.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Tài khoản</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Vai trò</th>
                            <th>Lần đăng nhập cuối</th>
                            <th>Ngày tạo</th>
                            <th class="text-end">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">@user.Username</div>
                                    <small class="text-muted">ID: @user.Id</small>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.Email))
                                    {
                                        <span>@user.Email</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(user.PhoneNumber))
                                    {
                                        <span>@user.PhoneNumber</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa cập nhật</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@(user.Role?.RoleName ?? "Không có")</span>
                                </td>
                                <td>
                                    @if (user.LastLoginAt.HasValue)
                                    {
                                        <span>@user.LastLoginAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Chưa đăng nhập</span>
                                    }
                                </td>
                                <td>
                                    <span>@user.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                    <a asp-page="/Staff/Users/Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" asp-page-handler="Delete" class="d-inline">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Xóa người dùng"
                                                onclick="return confirm('Bạn chắc chắn muốn xóa tài khoản này?');">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-users-slash fa-4x text-muted mb-3"></i>
                <p class="text-muted">Chưa có tài khoản nào được tạo.</p>
                <a asp-page="/Staff/Users/Create" class="btn btn-primary">
                    <i class="fas fa-user-plus"></i> Tạo tài khoản đầu tiên
                </a>
            </div>
        }
    </div>
</div>
