@page
@model MilkTeaWebsite.Pages.Staff.Products.CreateModel
@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-plus"></i> Thêm sản phẩm mới</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.ProductName" class="form-label">Tên sản phẩm *</label>
                            <input asp-for="Input.ProductName" class="form-control" placeholder="Ví dụ: Trà sữa trân châu đường đen" />
                            <span asp-validation-for="Input.ProductName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.CategoryId" class="form-label">Danh mục *</label>
                            <select asp-for="Input.CategoryId" class="form-select">
                                <option value="">-- Chọn danh mục --</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.Id">@category.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="Input.CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="3" 
                                  placeholder="Mô tả chi tiết về sản phẩm..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.PriceS" class="form-label">Giá Size S (VNĐ) *</label>
                            <input asp-for="Input.PriceS" type="number" step="1000" class="form-control" placeholder="30000" />
                            <span asp-validation-for="Input.PriceS" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.PriceM" class="form-label">Giá Size M (VNĐ) *</label>
                            <input asp-for="Input.PriceM" type="number" step="1000" class="form-control" placeholder="35000" />
                            <span asp-validation-for="Input.PriceM" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.PriceL" class="form-label">Giá Size L (VNĐ) *</label>
                            <input asp-for="Input.PriceL" type="number" step="1000" class="form-control" placeholder="40000" />
                            <span asp-validation-for="Input.PriceL" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.StockQuantity" class="form-label">Số lượng tồn kho *</label>
                            <input asp-for="Input.StockQuantity" type="number" class="form-control" placeholder="100" />
                            <span asp-validation-for="Input.StockQuantity" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.IsAvailable" class="form-label">Trạng thái</label>
                            <select asp-for="Input.IsAvailable" class="form-select">
                                <option value="true">Đang bán</option>
                                <option value="false">Ngừng bán</option>
                            </select>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Input.AvailableToppingIds" class="form-label">ID Topping có sẵn</label>
                            <input asp-for="Input.AvailableToppingIds" class="form-control" placeholder="1,2,3" />
                            <span asp-validation-for="Input.AvailableToppingIds" class="text-danger"></span>
                            <small class="text-muted">ID topping cách nhau bởi dấu phẩy</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ImageUrl" class="form-label">URL hình ảnh</label>
                        <input asp-for="Input.ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                        <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
                        <small class="text-muted">Nhập đường dẫn URL của hình ảnh sản phẩm</small>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-page="/Staff/Products/Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Lưu sản phẩm
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
