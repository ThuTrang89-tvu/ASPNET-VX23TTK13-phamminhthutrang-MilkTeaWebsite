@page
@model MilkTeaWebsite.Pages.Staff.Products.IndexModel
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-coffee"></i> Quản lý sản phẩm</h2>
    <a asp-page="/Staff/Products/Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm sản phẩm mới
    </a>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Products != null && Model.Products.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tên sản phẩm</th>
                            <th>Danh mục</th>
                            <th>Giá</th>
                            <th>Tồn kho</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>
                                    <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/no-image.jpg" : product.ImageUrl)" 
                                         alt="@product.ProductName" style="width: 50px; height: 50px; object-fit: cover;" 
                                         class="rounded">
                                </td>
                                <td>
                                    <strong>@product.ProductName</strong><br>
                                    <small class="text-muted">@product.Description</small>
                                </td>
                                <td>@product.Category?.CategoryName</td>
                                <td class="fw-bold text-primary">@product.PriceS.ToString("N0") - @product.PriceL.ToString("N0") đ</td>
                                <td>
                                    @if (product.StockQuantity < 10)
                                    {
                                        <span class="badge bg-danger">@product.StockQuantity</span>
                                    }
                                    else if (product.StockQuantity < 30)
                                    {
                                        <span class="badge bg-warning">@product.StockQuantity</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@product.StockQuantity</span>
                                    }
                                </td>
                                <td>
                                    @if (product.IsAvailable)
                                    {
                                        <span class="badge bg-success">Đang bán</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ngừng bán</span>
                                    }
                                </td>
                                <td>
                                    <a asp-page="/Staff/Products/Edit" asp-route-id="@product.Id" 
                                       class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" asp-page-handler="Delete" class="d-inline">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                <p class="text-muted">Chưa có sản phẩm nào</p>
            </div>
        }
    </div>
</div>
