@page
@model MilkTeaWebsite.Pages.Staff.Categories.IndexModel
@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-list"></i> Quản lý danh mục</h2>
    <a asp-page="/Staff/Categories/Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm danh mục mới
    </a>
</div>

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @Model.SuccessMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Categories != null && Model.Categories.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tên danh mục</th>
                            <th>Mô tả</th>
                            <th>Thứ tự hiển thị</th>
                            <th>Số sản phẩm</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Categories.OrderBy(c => c.DisplayOrder))
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(category.ImageUrl))
                                    {
                                        <img src="@category.ImageUrl" alt="@category.CategoryName" 
                                             style="width: 50px; height: 50px; object-fit: cover;" class="rounded">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded"
                                             style="width: 50px; height: 50px;">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }
                                </td>
                                <td>
                                    <strong>@category.CategoryName</strong>
                                </td>
                                <td>
                                    <small class="text-muted">@category.Description</small>
                                </td>
                                <td>
                                    <span class="badge bg-info">@category.DisplayOrder</span>
                                </td>
                                <td>
                                    <span class="badge bg-primary">@category.Products.Count sản phẩm</span>
                                </td>
                                <td>
                                    <a asp-page="/Staff/Categories/Edit" asp-route-id="@category.Id" 
                                       class="btn btn-sm btn-warning" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" asp-page-handler="Delete" class="d-inline">
                                        <input type="hidden" name="categoryId" value="@category.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                onclick="return confirm('Bạn có chắc muốn xóa danh mục này? Tất cả sản phẩm trong danh mục sẽ bị ảnh hưởng.')"
                                                title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
                <p class="text-muted">Chưa có danh mục nào</p>
                <a asp-page="/Staff/Categories/Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Tạo danh mục đầu tiên
                </a>
            </div>
        }
    </div>
</div>
