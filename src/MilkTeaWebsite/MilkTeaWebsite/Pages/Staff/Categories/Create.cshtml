@page
@model MilkTeaWebsite.Pages.Staff.Categories.CreateModel
@{
    ViewData["Title"] = "Thêm danh mục mới";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="fas fa-plus"></i> Thêm danh mục mới</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Input.CategoryName" class="form-label">Tên danh mục *</label>
                        <input asp-for="Input.CategoryName" class="form-control" placeholder="Ví dụ: Trà sữa, Trà trái cây..." />
                        <span asp-validation-for="Input.CategoryName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Description" class="form-label">Mô tả</label>
                        <textarea asp-for="Input.Description" class="form-control" rows="3" 
                                  placeholder="Mô tả ngắn về danh mục này..."></textarea>
                        <span asp-validation-for="Input.Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ImageUrl" class="form-label">URL hình ảnh</label>
                        <input asp-for="Input.ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                        <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
                        <small class="text-muted">Nhập đường dẫn URL của hình ảnh danh mục</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                        <input asp-for="Input.DisplayOrder" type="number" class="form-control" value="0" />
                        <span asp-validation-for="Input.DisplayOrder" class="text-danger"></span>
                        <small class="text-muted">Số thứ tự để sắp xếp danh mục (0 = đầu tiên)</small>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-page="/Staff/Categories/Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Lưu danh mục
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
