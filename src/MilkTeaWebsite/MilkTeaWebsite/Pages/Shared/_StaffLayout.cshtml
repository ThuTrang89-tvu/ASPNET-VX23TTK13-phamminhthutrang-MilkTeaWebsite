<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Staff Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/staff.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark text-white">
            <div class="sidebar-header p-3">
                <h4><i class="fas fa-user-tie"></i> Staff Panel</h4>
                <small>@User.Identity?.Name</small>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a asp-page="/Staff/Dashboard/Index" class="text-white p-3 d-block">
                        <i class="fas fa-chart-line"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a asp-page="/Staff/Orders/Index" class="text-white p-3 d-block">
                        <i class="fas fa-receipt"></i> Quản lý đơn hàng
                    </a>
                </li>
                <li>
                    <a asp-page="/Staff/Products/Index" class="text-white p-3 d-block">
                        <i class="fas fa-coffee"></i> Quản lý sản phẩm
                    </a>
                </li>
                <li>
                    <a asp-page="/Staff/Categories/Index" class="text-white p-3 d-block">
                        <i class="fas fa-list"></i> Quản lý danh mục
                    </a>
                </li>
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a asp-page="/Staff/Users/Index" class="text-white p-3 d-block">
                            <i class="fas fa-users-cog"></i> Quản lý người dùng
                        </a>
                    </li>
                }
                <li>
                    <a asp-page="/Staff/Reports/Index" class="text-white p-3 d-block">
                        <i class="fas fa-file-alt"></i> Báo cáo
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="ms-auto">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Customer/Products/Index">
                                    <i class="fas fa-store"></i> Xem trang khách hàng
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Logout">
                                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main role="main" class="container-fluid py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/staff.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
