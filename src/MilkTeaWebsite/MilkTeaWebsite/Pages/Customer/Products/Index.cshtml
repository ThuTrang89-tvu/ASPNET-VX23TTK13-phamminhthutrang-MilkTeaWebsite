@page
@model MilkTeaWebsite.Pages.Customer.Products.IndexModel
@{
    ViewData["Title"] = "Sản phẩm";
    Layout = "~/Pages/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Sản phẩm của chúng tôi</h2>
    
    <!-- Search Bar -->
    <div class="row mb-4">
        <div class="col-md-12">
            <form method="get" class="d-flex gap-2">
                <input type="text" name="searchKeyword" value="@Model.SearchKeyword" 
                       class="form-control" placeholder="Tìm kiếm sản phẩm..." />
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Tìm kiếm
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchKeyword))
                {
                    <a asp-page="/Customer/Products/Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Xóa
                    </a>
                }
            </form>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar Filter -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-filter"></i> Bộ lọc</h5>
                </div>
                <div class="card-body">
                    <form method="get" id="filterForm">
                        <input type="hidden" name="searchKeyword" value="@Model.SearchKeyword" />
                        
                        <!-- Category Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Danh mục</label>
                            <div class="list-group">
                                <a asp-page="/Customer/Products/Index" 
                                   asp-route-searchKeyword="@Model.SearchKeyword"
                                   class="list-group-item list-group-item-action @(Model.SelectedCategoryId == null ? "active" : "")">
                                    Tất cả
                                </a>
                                @foreach (var category in Model.Categories)
                                {
                                    <a asp-page="/Customer/Products/Index" 
                                       asp-route-categoryId="@category.Id"
                                       asp-route-searchKeyword="@Model.SearchKeyword"
                                       class="list-group-item list-group-item-action @(Model.SelectedCategoryId == category.Id ? "active" : "")">
                                        @category.CategoryName
                                    </a>
                                }
                            </div>
                        </div>

                        <hr>

                        <!-- Price Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Khoảng giá</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" name="minPrice" value="@Model.MinPrice" 
                                           class="form-control form-control-sm" placeholder="Từ" min="0" step="1000" />
                                </div>
                                <div class="col-6">
                                    <input type="number" name="maxPrice" value="@Model.MaxPrice" 
                                           class="form-control form-control-sm" placeholder="Đến" min="0" step="1000" />
                                </div>
                            </div>
                        </div>

                        <hr>

                        <!-- Size Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Kích thước</label>
                            <div class="form-check">
                                <input type="checkbox" name="sizes" value="S" class="form-check-input" 
                                       @(Model.SelectedSizes?.Contains("S") == true ? "checked" : "") />
                                <label class="form-check-label">Size S</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" name="sizes" value="M" class="form-check-input"
                                       @(Model.SelectedSizes?.Contains("M") == true ? "checked" : "") />
                                <label class="form-check-label">Size M</label>
                            </div>
                            <div class="form-check">
                                <input type="checkbox" name="sizes" value="L" class="form-check-input"
                                       @(Model.SelectedSizes?.Contains("L") == true ? "checked" : "") />
                                <label class="form-check-label">Size L</label>
                            </div>
                        </div>

                        <hr>

                        <!-- Sort Filter -->
                        <div class="mb-3">
                            <label class="form-label fw-bold">Sắp xếp theo</label>
                            <select name="sortBy" class="form-select form-select-sm">
                                <option value="" selected="@(string.IsNullOrEmpty(Model.SortBy))">Mặc định</option>
                                <option value="newest" selected="@(Model.SortBy == "newest")">Mới nhất</option>
                                <option value="price-asc" selected="@(Model.SortBy == "price-asc")">Giá thấp đến cao</option>
                                <option value="price-desc" selected="@(Model.SortBy == "price-desc")">Giá cao đến thấp</option>
                                <option value="name-asc" selected="@(Model.SortBy == "name-asc")">Tên A-Z</option>
                                <option value="name-desc" selected="@(Model.SortBy == "name-desc")">Tên Z-A</option>
                            </select>
                        </div>

                        <input type="hidden" name="categoryId" value="@Model.SelectedCategoryId" />
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fas fa-check"></i> Áp dụng
                            </button>
                            <a asp-page="/Customer/Products/Index" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-redo"></i> Đặt lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-md-9">
            @if (!string.IsNullOrEmpty(Model.SearchKeyword))
            {
                <div class="alert alert-info">
                    Kết quả tìm kiếm cho: <strong>"@Model.SearchKeyword"</strong> 
                    (@Model.Products.Count() sản phẩm)
                </div>
            }

            @if (Model.Products != null && Model.Products.Any())
            {
                <div class="row">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-md-4 col-sm-6 mb-4">
                            <div class="card product-card h-100">
                                <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/no-image.jpg" : product.ImageUrl)" 
                                     class="card-img-top" alt="@product.ProductName">
                                <div class="card-body">
                                    <h5 class="card-title">@product.ProductName</h5>
                                    <p class="card-text text-muted small">@product.Description</p>
                                    <p class="text-primary fw-bold">@product.Price.ToString("N0") đ</p>
                                    @if (product.IsAvailable && product.StockQuantity > 0)
                                    {
                                        <div class="d-grid gap-2">
                                            <a asp-page="/Customer/Products/Detail" asp-route-id="@product.Id" 
                                               class="btn btn-primary btn-sm">
                                                <i class="fas fa-eye"></i> Chi tiết
                                            </a>
                                        </div>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm w-100" disabled>
                                            Hết hàng
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> Không có sản phẩm nào phù hợp.
                </div>
            }
        </div>
    </div>
</div>
