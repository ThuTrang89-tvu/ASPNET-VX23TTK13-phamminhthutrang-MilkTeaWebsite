@page
@model MilkTeaWebsite.Pages.Customer.Products.DetailModel
@{
    ViewData["Title"] = Model.Product?.ProductName ?? "Chi tiết sản phẩm";
    Layout = "~/Pages/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-4">
    @if (Model.Product != null)
    {
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Customer/Products/Index">Sản phẩm</a></li>
                <li class="breadcrumb-item active">@Model.Product.ProductName</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-md-6">
                <img src="@(string.IsNullOrEmpty(Model.Product.ImageUrl) ? "/images/no-image.jpg" : Model.Product.ImageUrl)" 
                     class="img-fluid rounded shadow" alt="@Model.Product.ProductName">
            </div>
            <div class="col-md-6">
                <h2>@Model.Product.ProductName</h2>
                <p class="text-muted">@Model.Product.Category?.CategoryName</p>
                <hr>
                
                <h3 class="text-primary">@Model.Product.Price.ToString("N0") đ</h3>
                <p class="mt-3">@Model.Product.Description</p>
                
                @if (Model.Product.IsAvailable && Model.Product.StockQuantity > 0)
                {
                    <form method="post">
                        <input type="hidden" asp-for="ProductId" value="@Model.Product.Id" />
                        
                        <div class="mb-3">
                            <label class="form-label">Kích thước:</label>
                            <select asp-for="Size" class="form-select">
                                <option value="">Chọn size</option>
                                <option value="S">Size S</option>
                                <option value="M">Size M</option>
                                <option value="L">Size L</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Topping:</label>
                            <input asp-for="Topping" class="form-control" placeholder="Nhập topping (tùy chọn)" />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Số lượng:</label>
                            <input asp-for="Quantity" type="number" min="1" max="@Model.Product.StockQuantity" 
                                   class="form-control" required />
                            <small class="text-muted">Còn @Model.Product.StockQuantity sản phẩm</small>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Ghi chú:</label>
                            <textarea asp-for="Note" class="form-control" rows="3" 
                                      placeholder="Ghi chú thêm (tùy chọn)"></textarea>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-shopping-cart"></i> Thêm vào giỏ hàng
                            </button>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i> Sản phẩm hiện đang hết hàng
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> Không tìm thấy sản phẩm
        </div>
    }
</div>
