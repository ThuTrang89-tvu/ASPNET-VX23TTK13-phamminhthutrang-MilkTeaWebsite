@page
@model MilkTeaWebsite.Pages.Customer.Cart.IndexModel
@{
    ViewData["Title"] = "Giỏ hàng";
    Layout = "~/Pages/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn</h2>

    @if (Model.Cart?.CartItems != null && Model.Cart.CartItems.Any())
    {
        <div class="row">
            <div class="col-md-8">
                @foreach (var item in Model.Cart.CartItems)
                {
                    <div class="cart-item-card">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <div class="cart-item-image">
                                    <img src="@(string.IsNullOrEmpty(item.Product?.ImageUrl) ? "/images/no-image.jpg" : item.Product.ImageUrl)" 
                                         class="img-fluid" alt="@item.Product?.ProductName">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="cart-item-info">
                                    <h6>@item.Product?.ProductName</h6>
                                    <div class="cart-item-meta">
                                        @if (!string.IsNullOrEmpty(item.Size))
                                        {
                                            <span><i class="fas fa-ruler"></i> Size: <strong>@item.Size</strong></span><br>
                                        }
                                        @if (!string.IsNullOrEmpty(item.SelectedToppings))
                                        {
                                            <span><i class="fas fa-plus-circle"></i> Topping: <strong>@item.SelectedToppings</strong></span><br>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Note))
                                        {
                                            <span><i class="fas fa-sticky-note"></i> Ghi chú: <em>@item.Note</em></span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-2 text-center">
                                <small class="text-muted">Đơn giá</small>
                                <p class="cart-item-price mb-0">@((item.BasePrice + item.ToppingPrice).ToString("N0")) đ</p>
                            </div>
                            <div class="col-md-2">
                                <form method="post" asp-page-handler="UpdateQuantity">
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <label class="form-label text-center d-block mb-1"><small>Số lượng</small></label>
                                    <input type="number" name="quantity" value="@item.Quantity" 
                                           min="1" class="form-control cart-quantity-input" onchange="this.form.submit()" />
                                </form>
                            </div>
                            <div class="col-md-2 text-end">
                                <small class="text-muted">Tổng</small>
                                <p class="cart-item-price mb-2">@item.TotalPrice.ToString("N0") đ</p>
                                <form method="post" asp-page-handler="Remove" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <button type="submit" class="cart-remove-btn" title="Xóa sản phẩm">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="col-md-4">
                <div class="cart-summary-card">
                    <div class="cart-summary-header">
                        <i class="fas fa-receipt"></i> Tổng đơn hàng
                    </div>
                    <div class="cart-summary-body">
                        <div class="cart-summary-row">
                            <span>Tạm tính:</span>
                            <span class="fw-bold">@Model.TotalAmount.ToString("N0") đ</span>
                        </div>
                        <div class="cart-summary-row">
                            <span>Phí vận chuyển:</span>
                            <span class="fw-bold">30,000 đ</span>
                        </div>
                        <div class="cart-summary-row total">
                            <span>Tổng cộng:</span>
                            <span>@((Model.TotalAmount + 30000).ToString("N0")) đ</span>
                        </div>
                        
                        <div class="d-grid gap-2 mt-3">
                            <a asp-page="/Customer/Orders/Checkout" class="btn btn-primary btn-lg">
                                <i class="fas fa-credit-card"></i> Thanh toán
                            </a>
                            <a asp-page="/Customer/Products/Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Tiếp tục mua hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-5x empty-cart-icon mb-4"></i>
            <h4 class="mb-3" style="color: var(--customer-primary-dark);">Giỏ hàng trống</h4>
            <p class="text-muted mb-4">Bạn chưa có sản phẩm nào trong giỏ hàng</p>
            <a asp-page="/Customer/Products/Index" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag"></i> Mua sắm ngay
            </a>
        </div>
    }
</div>
